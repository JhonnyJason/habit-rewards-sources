// background styles
bg-icon-size = 66px


#background
    z-index -1
    background-color cd-dark
    position fixed
    top 0
    left 0 
    width 100%
    height: 100vh
    overflow hidden

#background-bottom-decoration
    position absolute
    bottom 0
    left 50%
    width 5471px
    height 240px
    color alpha(cd-flash, 0.6)
    transform translateX(-51%)

#background-icon
    position absolute
    width bg-icon-size
    height bg-icon-size
    right: 30%
    bottom: 7%
    color cd-flash
