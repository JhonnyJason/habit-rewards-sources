// slideinframe styles
button-icon-size = 40px
button-padding = 7px

page-button-margin = button-icon-size + 2 * button-padding

/*==================================================
General Slideinframe  Styles
==================================================*/
.slideinframe.active
    transform translateX(0)

.slideinframe
    padding: page-button-margin 0
    box-sizing: border-box
    display: flex
    flex-direction: column
    background-color rgba(0, 0, 0, 0.9)
    position fixed
    z-index: 99
    top 0
    lef 0
    height 100vh
    width 100%
    transform translateX(-102%)
    transition transform 0.4s

    .back-icon
        display: block
        margin-left auto
        height: button-icon-size
        width button-icon-size

    .accept-icon
        display block
        margin-left auto
        height: button-icon-size
        width button-icon-size

    .slideinframe-back-button
        background-color cd-dark
        position absolute
        padding button-padding (2 * button-padding)
        top: 0
        width 100%
        box-sizing: border-box
        cursor pointer

    .slideinframe-accept-button
        background-color cd-dark
        position absolute
        bottom: 0
        width 100%
        padding button-padding (2 * button-padding)
        box-sizing: border-box
        cursor pointer

