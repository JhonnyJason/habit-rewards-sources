#darlingspage-content
    width 100%

#chosen-darling-address
    margin-bottom 30px


#connected-indicator
    #not-connected-decoration
        display block
    #connected-decoration
        display none

#connected-indicator.connected
    #not-connected-decoration
        display none
    #connected-decoration
        display block


#connected-decoration
    color cd-flash

#not-connected-decoration
    color cd-dark
#not-connected-icon
    width 90px


#my-score-display
    font-size: 35px